{
  "compilerOptions": {
    "lib": ["es5", "es2015.promise", "dom", "es2015"],
    "target": "ES6",
    "module": "es2015",
    "moduleResolution": "node",
    "outDir": "./build/",
    "rootDir": "./src/ts",
    "strict": true,
    "esModuleInterop": true,
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true
  },
  "include": ["./src/ts/**/*.ts"],
  "exclude": ["node_modules/"]
}
